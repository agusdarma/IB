<configuration debug="false">
  <!-- 
  <property name="WEB_ROOT" value="${digimod-web.root}/WEB-INF/logs/" />
   -->
  <property name="WEB_ROOT" value="C:\\Personal\\Project\\IB\\IB\\data_logs" />
  
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>%date{HH:mm:ss.SSS}|[%thread]|%.-5level|%logger{0}|%msg%n</pattern>
    </encoder>
  </appender>
	
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${WEB_ROOT}/server_web.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- rollover daily -->
      <fileNamePattern>${WEB_ROOT}/server_web-%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>
      <timeBasedFileNamingAndTriggeringPolicy
            class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <!-- or whenever the file size reaches 100MB -->
        <maxFileSize>100MB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
      <!-- Keep 5 periods based on daily rollover -->
	  <maxHistory>5</maxHistory>  
    </rollingPolicy>

    <encoder>
      <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS}|[%thread]|%.-5level|%logger{35} - %msg%n</pattern>
    </encoder>
  </appender> 
  
  <appender name="MBW_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${WEB_ROOT}/apps_web.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- rollover daily -->
      <fileNamePattern>${WEB_ROOT}/apps_web-%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>
      <timeBasedFileNamingAndTriggeringPolicy
            class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <!-- or whenever the file size reaches 100MB -->
        <maxFileSize>100MB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
      <!-- Keep 5 periods based on daily rollover -->
      <maxHistory>5</maxHistory>  
    </rollingPolicy>

    <encoder>
      <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS}|[%thread]|%.-5level|%logger{35} - %msg%n</pattern>
    </encoder>
  </appender> 
  
  <appender name="SQL_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${WEB_ROOT}/sql_web.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- rollover daily -->
      <fileNamePattern>${WEB_ROOT}/sql_web-%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>
      <timeBasedFileNamingAndTriggeringPolicy
            class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        <!-- or whenever the file size reaches 100MB -->
        <maxFileSize>100MB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
      <!-- Keep 5 periods based on daily rollover -->
      <maxHistory>5</maxHistory>  
    </rollingPolicy>

    <encoder>
      <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS}|[%thread]|%.-5level|%logger{35} - %msg%n</pattern>
    </encoder>
  </appender> 
  
  <logger name="id.co.emobile.samba" level="DEBUG" additivity="false">
    <appender-ref ref="MBW_FILE" />
    <appender-ref ref="STDOUT" />
  </logger>
  
  <logger name="org.springframework" level="DEBUG" additivity="false">
    <appender-ref ref="FILE" />
  </logger>
  
  <logger name="org.springframework.beans.factory" level="INFO" additivity="false">
    <appender-ref ref="FILE" />
  </logger>
  
  <logger name="org.springframework.jdbc" level="DEBUG" additivity="false">
    <appender-ref ref="SQL_FILE" />
  </logger>
  
  <logger name="id.co.emobile.samba.web.mapper" level="TRACE" additivity="false">
    <appender-ref ref="SQL_FILE" />
  </logger>
  
  <logger name="java.sql" level="DEBUG" additivity="false">
    <appender-ref ref="SQL_FILE" />
  </logger>
  
  <root level="WARN">
  	<appender-ref ref="FILE" />
  </root>
  
</configuration>