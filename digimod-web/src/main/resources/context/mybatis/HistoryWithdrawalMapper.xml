<mapper namespace="id.co.emobile.samba.web.mapper.HistoryWithdrawMapper">
    
    <insert id="createHistoryWithdraw" parameterType="HistoryWithdraw">
    	insert into history_withdraw(ib_user_code, amount, date_withdraw_on, status)
    	values(#{ibUserCode}, #{amount}, #{dateWithdrawOn}, #{status}
    	)
    </insert>
    
    <sql id="_fieldHistoryWithdraw">
    	hw.ib_user_code as ibUserCode, 
    	hw.amount as amount, 
    	hw.date_withdraw_on as dateWithdrawOn, 
    	hw.status as status
    </sql>
    
    <select id="findHistoryWithdrawByIbUserCode" resultType="HistoryWithdraw" parameterType="String">
        select <include refid="_fieldHistoryWithdraw" />
        from history_withdraw hw
        left join lookup_data l on hw.status=l.lookup_value and l.lookup_cat=4
        where hw.ib_user_code=#{value}
    </select>
    
</mapper>
