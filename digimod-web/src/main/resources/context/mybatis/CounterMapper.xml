<mapper namespace="id.co.emobile.samba.web.mapper.CounterMapper">
   
    <insert id="createCounter" parameterType="Counter" 
			keyProperty="appName">
		insert into tbl_counter(app_name, counter, period)
		values(#{appName}, #{counter}, #{period})
    </insert>

    <update id="updateCounter" parameterType="Counter">
		update tbl_counter set counter = #{counter}, period = #{period}
		where app_name = #{appName,javaType=String,jdbcType=CHAR} and counter = #{oldCounter}
    </update>
    
    <sql id="_sqlCounter">
		sic.app_name as appName,
	    sic.counter as counter,
	    sic.period as period,
		
		sic.counter as oldCounter
    </sql>
    
    <select id="findCounterByAppName" resultType="Counter" 
    		parameterType="java.lang.String">
        select <include refid="_sqlCounter"/> 
        from tbl_counter sic
        where sic.app_name=#{value,javaType=String,jdbcType=CHAR}
    </select>
    
</mapper>
