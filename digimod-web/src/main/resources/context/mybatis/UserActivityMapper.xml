<mapper namespace="id.co.emobile.samba.web.mapper.UserActivityMapper">
    
    <insert id="createUserActivity" parameterType="UserActivity" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO user_activity (user_data_id, user_code, user_name, 
			action,  module_name, changed_attribute, description,
			target_table, target_id, ip_address, created_on)
    	values (#{userDataId}, #{userCode}, #{userName}, 
    		#{action}, #{moduleName}, #{changedAttribute}, #{description},
    		#{targetTable}, #{targetId}, #{ipAddress}, #{createdOn});		
    </insert>
    
    <sql id="_fieldUserActivity">
    	id as id,
    	user_data_id as userDataId, 
    	user_code as userCode, 
    	user_name as userName, 
		action as action,  
		module_name as moduleName, 
		changed_attribute as changedAttribute, 
		description as description,
		target_table as targetTable, 
		target_id as targetId, 
		ip_address as ipAddress, 
		created_on as createdOn
    </sql>
	
	<select id="findLastUserActivityForUser" resultType="UserActivity" parameterType="java.util.Map">
		select <include refid="_fieldUserActivity" />
		from user_activity
		where user_data_id=#{userId}
		order by created_on desc
		limit ${limit}
	</select> 
	
	<select id="selectUserActivityByParamNoPaging" resultType="UserActivity" parameterType="UserActivityParamVO">
		select <include refid="_fieldUserActivity" />
		from user_activity ua
		<include refid="_sqlSelectionUserActivity" /> 
		order by created_on desc
	</select>
	
	<select id="selectUserActivityByParam" resultType="UserActivity" parameterType="UserActivityParamVO">
		select <include refid="_fieldUserActivity" />
		from user_activity ua
		<include refid="_sqlSelectionUserActivity" />
		ORDER BY ${sortVariable} ${sortOrder}
		limit #{rowStartMysql},#{rowPerPage}
	</select>

	<select id="countUserActivityByParam" resultType="java.lang.Integer" parameterType="UserActivityParamVO">
 		select count(1)
		from user_activity ua
		<include refid="_sqlSelectionUserActivity" />
	</select>
	
	<sql id="_sqlSelectionUserActivity">
		<where>
		    <if test="startDate != null">
		 		and ua.created_on >= #{startDate}
			</if>
			<if test="endDate != null">
		 		and ua.created_on &lt;= #{endDate}
			</if>    
			 <if test="userDataId > 0">
		 		and ua.user_data_id = #{userDataId}
			</if>
			<!--  
			<if test="userCode != null and userCode.length() > 0">
				and upper(ua.user_code) like #{userCodeLike}
			</if>
			<if test='action != "-1" '>
				and ua.action=#{action}
			</if>
			<if test='moduleName != "-1"'>
				and ua.module_name=#{moduleName}
			</if>
			-->
		</where>
	</sql>
	
	<!-- 
	<select id="getViewActivityUser" resultType="UserData">
 		select user_data_id as id, user_code as userCode, user_name as userName 
 		from view_activity_user
	</select>
	 -->
</mapper>
