<mapper namespace="id.co.emobile.samba.web.mapper.SourceAccountMapper">	
	<insert id="createSourceAccount" parameterType="SourceAccount" useGeneratedKeys="true" keyProperty="id">
	    insert into source_account(phone_no, srac_data, srac_key,
	    	created_by, created_on, updated_by, updated_on) 
		values(#{phoneNo}, #{sracData}, #{sracKey}, 
			#{createdBy}, #{createdOn}, #{updatedBy}, #{updatedOn}) 
    </insert>
    
    <update id="updateSourceAccount" parameterType="SourceAccount">
		update source_account 
		set phone_no = #{phoneNo},
			srac_data = #{sracData},
			updated_by = #{updatedBy},
			updated_on = #{updatedOn}
		where id=#{id} 
    </update>
    
    <sql id="_fieldSourceAccount">
    	id as id,
    	phone_no as phoneNo,
        srac_data as sracData, 
        srac_key as sracKey,
	    created_by as createdBy, 
	    created_on as createdOn, 
	    updated_by as updatedBy, 
	    updated_on as updatedOn
    </sql>
    
    <select id="findSourceAccountAll" resultType="SourceAccount">
		SELECT <include refid="_fieldSourceAccount" />
		FROM source_account
    </select>
    
     <select id="findSourceAccountById" resultType="SourceAccount" parameterType="int">
		SELECT <include refid="_fieldSourceAccount" />
		FROM source_account
		where id=#{value}
    </select>
    
</mapper>