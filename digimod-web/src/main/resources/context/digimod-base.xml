<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="digimod-base" extends="struts-default, jasperreports-default, json-default">

		<interceptors>
			<interceptor name="securityCheck"
				class="id.co.emobile.samba.web.interceptor.SecurityInterceptor" />
			<interceptor name="jmesaPaging" 
				class="id.co.emobile.samba.web.interceptor.JMesaPagingInterceptor" />
			<interceptor name="moduleState" 
				class="id.co.emobile.samba.web.interceptor.ModuleStateInterceptor" />
			<interceptor name="antiCsrf"
				class="id.co.emobile.samba.web.interceptor.AntiCsrfInterceptor" />
			<interceptor name="sanitizerCheck"
				class="id.co.emobile.samba.web.interceptor.SanitizerInterceptor" />
			
			<interceptor-stack name="webStack">
				<interceptor-ref name="basicStack" />
			</interceptor-stack>

			<interceptor-stack name="webSecureStack">
			    <interceptor-ref name="antiCsrf" /> 			    
				<interceptor-ref name="sanitizerCheck" />
				<interceptor-ref name="fileUpload" />
                <interceptor-ref name="i18nStack" />
                <interceptor-ref name="jmesaPaging" />
                <interceptor-ref name="securityCheck" />
                <interceptor-ref name="moduleState" />
                
                <interceptor-ref name="params"/>
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="webStack" />

		<global-results>
			<!-- 
			<result name="error">/WEB-INF/pages/error.jsp</result>
			-->
			<result name="sessionExpired" type="redirectAction">
				<param name="actionName">Login!expired</param>
			</result>
			<result name="moduleAccessDenied" type="redirectAction">
				<param name="actionName">InvalidModule</param>
			</result>
			<result name="changePasswordExpired" type="redirectAction">
				<param name="actionName">ChangePassword!forceChgPassword</param>
			</result>
		</global-results>
		
		<!--  
		<global-exception-mappings>
			<exception-mapping result="error" exception="java.lang.Throwable"/>
		</global-exception-mappings>
		-->
		
	</package>
</struts>