<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="digimod-security" extends="digimod-base">
        
        <action name="UserData!*" method="{1}" class="id.co.emobile.samba.web.action.security.UserDataAction">
            <interceptor-ref name="webSecureStack" />
            <result name="search">WEB-INF/pages/security/user_data_search.jsp</result>
            <result name="input">WEB-INF/pages/security/user_data_input.jsp</result>
			<result name="inputJson" type="stream">
				<param name="contentType">text/plain</param>
				<param name="inputName">wrv</param>
			</result>
			<result name="searchJson" type="stream">
				<param name="contentType">text/plain</param>
				<param name="inputName">wsr</param>
			</result>
        </action>
   		
   		 <action name="ResetPassword!*" method="{1}" class="id.co.emobile.samba.web.action.security.ResetPasswordAction">
            <interceptor-ref name="webSecureStack" />
            <result name="search">WEB-INF/pages/security/reset_password_search_new.jsp</result>
            <result name="input">WEB-INF/pages/security/reset_password_input_new.jsp</result>
			<result name="inputJson" type="stream">
				<param name="contentType">text/plain</param>
				<param name="inputName">wrv</param>
			</result>
			<result name="searchJson" type="stream">
				<param name="contentType">text/plain</param>
				<param name="inputName">wsr</param>
			</result>
        </action>
        
   		<action name="UserLevel!*" method="{1}" class="id.co.emobile.samba.web.action.security.UserLevelAction">
            <interceptor-ref name="webSecureStack" />
            <result name="search">WEB-INF/pages/security/user_level_search_new.jsp</result>
 	        <result name="input">WEB-INF/pages/security/user_level_input_new.jsp</result>
     	    <result name="inputJson" type="stream">
				<param name="contentType">text/plain</param>
				<param name="inputName">wrv</param>
			</result>
			<result name="searchJson" type="stream">
				<param name="contentType">text/plain</param>
				<param name="inputName">wsr</param>
			</result>
        </action>
        
        <action name="ChangePassword!*" method="{1}" class="id.co.emobile.samba.web.action.security.ChangePasswordAction">
            <interceptor-ref name="webSecureStack" /> 
            <result name="input">WEB-INF/pages/security/change_password_new.jsp</result>
            <result name="success" type="redirectAction">ChangePassword!finish</result>
            <result name="inputJson" type="stream">
				<param name="contentType">text/plain</param>
				<param name="inputName">wrv</param>
			</result>
        </action>
		
        <action name="UserPreference!*" method="{1}" class="id.co.emobile.samba.web.action.security.UserPreferenceAction">
            <interceptor-ref name="webSecureStack" /> 
            <result name="edit">WEB-INF/pages/security/user_preference_update.jsp</result>
            <result name="finish">WEB-INF/pages/security/user_preference_update.jsp</result>
            <result name="success" type="redirectAction">
				<param name="actionName">UserPreference!finish</param> 
			</result>
        </action>
        
        <action name="ServerPerformance!*" method="{1}" class="id.co.emobile.samba.web.action.security.ServerPerformanceAction">
            <interceptor-ref name="webStack" /> 
        </action>
	</package>
</struts>
