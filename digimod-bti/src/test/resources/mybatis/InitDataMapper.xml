<mapper namespace="com.emobile.jets.mmbs.lib.mapper.InitDataMapper">
    
    <sql id="_sqlInitData">
        id.init_app as initApp,
        id.init_index as initIndex,
        id.init_value as initValue
    </sql>
    
    <select id="selectByAppAndIndex" resultType="InitData" 
    		parameterType="java.util.Map">
        select <include refid="_sqlInitData" />
        from init_data id
        where id.init_app=#{app} and id.init_index=#{index}
    </select>
    
</mapper>
