<mapper namespace="com.emobile.jets.mmbs.lib.mapper.BtiTerminalMapper">
   
    <update id="updateBtiTerminal" parameterType="BtiTerminal">
    	update tbl_bti_terminal set last_terminal = #{lastTerminal}, 
    		updated_on = #{updatedOn}
    	where id= #{id}
    </update>
    
    <sql id="_sqlBtiTerminal">
    	bt.id as id,
    	bt.min_terminal as minTerminal,
    	bt.max_terminal as maxTerminal,
    	bt.last_terminal as lastTerminal,
    	bt.updated_on as updatedOn
    </sql>
    
    <select id="findBtiTerminalById" resultType="BtiTerminal" 
    		parameterType="int">
        select <include refid="_sqlBtiTerminal"/> 
        from tbl_bti_terminal bt
        where bt.id=#{value}
    </select>
    
</mapper>
